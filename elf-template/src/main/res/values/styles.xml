<resources>


    <!-- textView -->
    <style name="elf_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/elf_text_black</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="elf_tv_20" parent="elf_tv"><item name="android:textSize">20px</item></style>
    <style name="elf_tv_22" parent="elf_tv"><item name="android:textSize">22px</item></style>
    <style name="elf_tv_24" parent="elf_tv"><item name="android:textSize">24px</item></style>
    <style name="elf_tv_28" parent="elf_tv"><item name="android:textSize">28px</item></style>
    <style name="elf_tv_32" parent="elf_tv"><item name="android:textSize">32px</item></style>
    <style name="elf_tv_36" parent="elf_tv"><item name="android:textSize">36px</item></style>
    <style name="elf_tv_42" parent="elf_tv"><item name="android:textSize">42px</item></style>
    <style name="elf_tv_46" parent="elf_tv"><item name="android:textSize">46px</item></style>


    <!-- imageView -->
    <style name="elf_iv">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

    <style name="elf_iv_836_100" parent="elf_iv">
        <item name="android:layout_width">836px</item>
        <item name="android:layout_height">100px</item>
    </style>

    <style name="elf_iv_70_70" parent="elf_iv">
        <item name="android:layout_width">70px</item>
        <item name="android:layout_height">70px</item>
    </style>

    <style name="elf_iv_90_26" parent="elf_iv">
        <item name="android:layout_width">96px</item>
        <item name="android:layout_height">26px</item>
    </style>

    <style name="elf_iv_98_98" parent="elf_iv">
        <item name="android:layout_width">98px</item>
        <item name="android:layout_height">98px</item>
    </style>



    <!-- section -->
    <style name="elf_layout">
        <item name="android:background">@null</item>
    </style>

    <style name="elf_template_root" parent="elf_layout">
        <item name="android:id">@id/elf_rootView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="elf_template_item_root" parent="elf_layout">
        <item name="android:id">@id/elf_rootView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="elf_layout_960" parent="elf_layout">
        <item name="android:layout_width">960px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="elf_layout_990" parent="elf_layout">
        <item name="android:layout_width">990px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="elf_layout_1020" parent="elf_layout">
        <item name="android:layout_width">1020px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="elf_layout_960_100" parent="elf_layout_960"><item name="android:layout_height">100px</item></style>
    <style name="elf_layout_960_260" parent="elf_layout_960"><item name="android:layout_height">260px</item></style>

    <style name="elf_layout_990_317" parent="elf_layout_990"><item name="android:layout_height">317px</item></style>
    <style name="elf_layout_1020_160" parent="elf_layout_1020"><item name="android:layout_height">160px</item></style>

    <style name="elf_BannerDefaultStyle">
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>

        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <!--<item name="banner_placeholderDrawable">@drawable/holder</item>-->

        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
